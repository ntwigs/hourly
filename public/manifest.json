{
  "author": "ntwigs",
  "manifest_version": 3,
  "short_name": "Hourly",
  "name": "Hourly",
  "description": "Convert that old boring time into something fun - like burgers.",
  "version": "0.0.1",
  "permissions": ["storage", "tabs"],
  "web_accessible_resources": [{ 
    "resources": ["static/media/*.svg"],
    "matches": ["<all_urls>"]
  }],
  "content_scripts": [
    {
      "matches": ["https://track.toggl.com/timer"],
      "js": ["./static/js/content.js"],
      "all_frames": false,
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "./static/js/background.js"
  },
  "action": {
    "default_title": "Hourly",
    "default_popup": "index.html"
  }
}
